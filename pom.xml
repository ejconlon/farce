<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.exathunk</groupId>
    <artifactId>farce</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Farce</name>
    <url>http://exathunk.net</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.11</version>
                <configuration>
                    <systemProperties>
                        <property>
                            <name>java.util.logging.config.file</name>
                            <value>logging.properties</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>profile-genschemas</id>
            <activation>
                <file><exists>/bin/bash</exists></file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-sources</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <tasks>
                                        <property name="classpath" refid="maven.compile.classpath"/>
                                        <mkdir dir="target/generated-sources" />
                                        <exec executable="java">
                                            <arg value="-cp"/>
                                            <arg value="${classpath}"/>
                                            <arg value="net.exathunk.jsubschema.gen.RunGen"/>
                                            <arg value="src/main/resources/schemas"/>
                                            <arg value="target/generated-sources/gen-javabean"/>
                                            <arg value="net.exathunk.farce.genschema"/>
                                            <arg value="net.exathunk.jsubschema.genschema.schema.Schema"/>
                                            <arg value="net.exathunk.jsubschema.genschema.schema.SchemaLike"/>
                                        </exec>
                                        <delete>
                                            <fileset dir="src/main/java/net/exathunk/farce/genschema"/>
                                        </delete>
                                        <copy todir="src/main/java/net/exathunk/farce/genschema">
                                            <fileset dir="target/generated-sources/gen-javabean/net/exathunk/farce/genschema"/>
                                        </copy>
                                        <delete>
                                            <fileset dir="target/generated-sources/gen-javabean/net/exathunk/farce/genschema"/>
                                        </delete>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.4</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
            <version>1.9.9</version>
        </dependency>
        <dependency>
            <groupId>net.exathunk</groupId>
            <artifactId>jsubschema</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

</project>
